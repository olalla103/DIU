<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestionhotel.controller.RootLayoutController">
    <children>
        <!-- Barra de menú -->
        <MenuBar prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="Menú de gestión">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Gráfico estadísticas" />
                        <MenuItem mnemonicParsing="false" text="Galería de fotos" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Menú de aplicación">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Documentación" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- Tabla de clientes -->
        <TableView fx:id="tablaClientes" prefHeight="390.0" prefWidth="265.0" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="28.0">
            <columns>
                <TableColumn fx:id="columnaNombre" prefWidth="100.0" text="Nombre" />
                <TableColumn fx:id="columnaApellidos" prefWidth="100.0" text="Apellidos" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <!-- Campos de texto para la información del cliente -->
        <TextField fx:id="dniCliente" layoutX="286.0" layoutY="61.0" AnchorPane.leftAnchor="286.0" AnchorPane.topAnchor="56.0" />
        <TextField fx:id="direccionCliente" layoutX="286.0" layoutY="117.0" prefHeight="29.0" prefWidth="242.0" AnchorPane.leftAnchor="286.0" AnchorPane.topAnchor="112.0" />
        <TextField fx:id="provinciaCliente" layoutX="286.0" layoutY="232.0" AnchorPane.leftAnchor="286.0" AnchorPane.topAnchor="232.0" />
        <TextField fx:id="localidadCliente" layoutX="286.0" layoutY="175.0" AnchorPane.leftAnchor="286.0" AnchorPane.topAnchor="171.0" />

        <!-- Etiquetas -->
        <Text layoutX="288.0" layoutY="51.0" text="DNI" AnchorPane.leftAnchor="288.0" AnchorPane.topAnchor="37.0" />
        <Text layoutX="288.0" layoutY="107.0" text="DIRECCIÓN" AnchorPane.leftAnchor="288.0" AnchorPane.topAnchor="93.0" />
        <Text layoutX="287.0" layoutY="166.0" text="LOCALIDAD" AnchorPane.leftAnchor="287.0" AnchorPane.topAnchor="152.0" />
        <Text layoutX="288.0" layoutY="228.0" text="PROVINCIA" AnchorPane.leftAnchor="288.0" AnchorPane.topAnchor="214.0" />

        <!-- Buscador de reservas -->
        <TextField fx:id="busquedaPorDNI" layoutX="286.0" layoutY="298.0" AnchorPane.leftAnchor="286.0" AnchorPane.topAnchor="293.0" />
        <Text layoutX="285.0" layoutY="288.0" text="BUSCAR RESERVA POR DNI" AnchorPane.leftAnchor="285.0" AnchorPane.topAnchor="274.0" />

        <!-- Botones -->
        <Button fx:id="reservasAsociadasCliente" layoutX="275.0" layoutY="349.0" text="Reservas" AnchorPane.leftAnchor="275.0" AnchorPane.topAnchor="349.0" />
        <Button fx:id="nuevaReserva" layoutX="360.0" layoutY="349.0" text="Nueva reserva" AnchorPane.leftAnchor="360.0" AnchorPane.topAnchor="349.0" />
        <Button fx:id="buscarReserva" layoutX="470.0" layoutY="298.0" text="Buscar" AnchorPane.leftAnchor="470.0" AnchorPane.topAnchor="293.0" />
        <Button fx:id="nuevoCliente" layoutX="476.0" layoutY="349.0" text="Nuevo Cliente" AnchorPane.leftAnchor="476.0" AnchorPane.topAnchor="349.0" />
    </children>
</AnchorPane>
